<div>
  <strong>User:</strong>
  <%= @tournament.user.username %>
</div>

<div>
  <strong>Name:</strong>
  <%= @tournament.name %>
</div>

<div>
  <strong>Tournament type:</strong>
  <%= @tournament.tournament_type.name %>
</div>

<div>
  <strong>Participants:</strong>
  <% if @tournament.participants.present? %>
  <ul>
    <% @tournament.participants.each do |participant| %>
      <li>
        <%= participant.team.name %>
      </li>
    <% end %>
  </ul>
  <% else %>
    None
  <% end %>
</div>

<div>
  <strong>Start date:</strong>
  <%= @tournament.start_date %>
</div>

<div>
  <strong>Finished:</strong>
  <%= @tournament.finished %>
</div>

<%= render 'tournaments/bracket-partials/single-elimination'%>

<% if @current_user_in_tournament %>
  <%= link_to 'Leave tournament', leave_tournament_path(@tournament), method: :post %>
<% else %>
  <%= link_to 'Join tournament', join_tournament_path(@tournament), method: :post %>
<% end %>
<br>
<% if @tournament.user == current_user %>
<%= link_to 'Edit', edit_tournament_path(@tournament) %> |
<% end %>
<%= link_to 'Back', tournaments_path %>